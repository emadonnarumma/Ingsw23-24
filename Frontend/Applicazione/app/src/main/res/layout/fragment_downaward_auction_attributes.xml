<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.createAuction.fragments.specificAuctionAttributes.DownwardAuctionAttributesFragment">

    <TextView
        android:id="@+id/decrement_time_text_view_downward_auction_attributes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/verdana_bold"
        android:layout_marginTop="10sp"
        android:text="@string/decrement_phrase"

        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/decrement_amount_layout_downward_auction_attributes"
        app:layout_constraintTop_toBottomOf="@id/decrement_amount_layout_downward_auction_attributes" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/initial_price_layout_downward_auction_attributes"
        android:layout_width="370dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:endIconMode="custom"
        app:endIconDrawable="@drawable/ic_question_mark_white_24dp">




        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/initial_price_edit_text_downward_auction_attributes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/initial_price_phrase"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:textSize="15sp" />



    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/minimum_price_layout_downward_auction_attributes"
        android:layout_width="370dp"
        android:layout_height="wrap_content"

        app:endIconMode="custom"
        app:endIconDrawable="@drawable/ic_question_mark_white_24dp"

        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/initial_price_layout_downward_auction_attributes">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/secret_minimum_price_edit_text_downward_auction_attributes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/secret_minimum_price_phrase"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:textSize="15sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/decrement_amount_layout_downward_auction_attributes"
        android:layout_width="370dp"
        android:layout_height="wrap_content"

        app:endIconMode="custom"
        app:endIconDrawable="@drawable/ic_question_mark_white_24dp"

        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/minimum_price_layout_downward_auction_attributes">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/decrement_amount_edit_text_downward_auction_attributes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/decrement_amount_phrase"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:textSize="15sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.wx.wheelview.widget.WheelView
        android:id="@+id/hours_wheel_view_downward_auction_attributes"
        android:layout_width="150dp"
        android:layout_height="40dp"

        app:layout_constraintStart_toStartOf="@id/decrement_amount_layout_downward_auction_attributes"
        app:layout_constraintTop_toBottomOf="@id/decrement_time_text_view_downward_auction_attributes" />

    <com.wx.wheelview.widget.WheelView
        android:id="@+id/minutes_wheel_view_downward_auction_attributes"
        android:layout_width="150dp"
        android:layout_height="40dp"

        app:layout_constraintEnd_toEndOf="@id/decrement_amount_layout_downward_auction_attributes"
        app:layout_constraintTop_toBottomOf="@id/decrement_time_text_view_downward_auction_attributes" />

    <com.wx.wheelview.widget.WheelView
        android:id="@+id/days_wheel_view_downward_auction_attributes"
        android:layout_width="150dp"
        android:layout_height="40dp"

        app:layout_constraintStart_toStartOf="@id/hours_wheel_view_downward_auction_attributes"
        app:layout_constraintTop_toBottomOf="@id/hours_wheel_view_downward_auction_attributes" />

    <com.wx.wheelview.widget.WheelView
        android:id="@+id/months_wheel_view_downward_auction_attributes"
        android:layout_width="150dp"
        android:layout_height="40dp"

        app:layout_constraintEnd_toEndOf="@id/minutes_wheel_view_downward_auction_attributes"
        app:layout_constraintTop_toBottomOf="@id/minutes_wheel_view_downward_auction_attributes" />


    <com.github.leandroborgesferreira.loadingbutton.customViews.CircularProgressButton
        android:id="@+id/create_auction_button_downward_auction_attributes"
        android:layout_width="200dp"
        android:layout_height="66dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/green"
        android:text="@string/create_downward_auction_phrase"
        android:textColor="@color/white"
        app:initialCornerAngle="50dp"
        app:layout_constraintEnd_toEndOf="@id/months_wheel_view_downward_auction_attributes"
        app:layout_constraintTop_toBottomOf="@id/months_wheel_view_downward_auction_attributes"

        app:layout_goneMarginTop="30dp"
        app:spinning_bar_color="@color/white"
        app:spinning_bar_padding="10dp" />


</androidx.constraintlayout.widget.ConstraintLayout>