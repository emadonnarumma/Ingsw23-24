<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.createAuction.fragments.userTypeAuctionAttributes.BuyerAuctionTypesFragment">




    <TextView
        android:id="@+id/title_text_view_buyer_auction_types"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/auction_type_phrase"
        android:textStyle="bold"
        android:textSize="30sp"

        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/brown"

        app:layout_constraintTop_toBottomOf="@id/title_text_view_buyer_auction_types"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>