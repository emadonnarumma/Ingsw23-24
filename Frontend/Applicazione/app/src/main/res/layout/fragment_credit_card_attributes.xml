<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.createAuction.fragments.specificAuctionAttributes.DownwardAuctionAttributesFragment">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/card_code_layout_credit_card_attributes"
        android:layout_width="370dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >




        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/card_code_edit_text_card_attributes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/credit_card_code_phrase"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:textSize="15sp" />
    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/card_owner_name_layout_credit_card_attributes"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_code_layout_credit_card_attributes">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/card_owner_name_edit_text_card_attributes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name_phrase"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:textSize="15sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/card_owner_surname_layout_credit_card_attributes"
        android:layout_width="370dp"
        android:layout_height="wrap_content"

        app:endIconMode="custom"
        app:endIconDrawable="@drawable/ic_question_mark_white_24dp"

        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_owner_name_layout_credit_card_attributes">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/card_owner_surname_edit_text_card_attributes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/surname_phrase"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:textSize="15sp" />
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>