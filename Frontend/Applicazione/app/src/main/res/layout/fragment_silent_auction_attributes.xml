<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.createAuction.fragments.specificAuctionAttributes.SilentAuctionAttributesFragment">

    <TextView
        android:id="@+id/date_hint_text_view_silent_auction_attributes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:fontFamily="@font/verdana_bold"
        android:text="@string/date_picker_phrase"
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/date_text_silent_auction_attributes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/date_text_silent_auction_attributes"
        android:layout_width="280dp"
        android:layout_height="150dp"
        android:background="@drawable/rounded_corners_green"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:gravity="center"
        android:drawablePadding="10dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_hint_text_view_silent_auction_attributes"
        app:drawableEndCompat="@drawable/ic_calendar_24dp" />

    <com.wx.wheelview.widget.WheelView
        android:id="@+id/minutes_wheel_view_silent_auction_attributes"
        android:layout_width="150dp"
        android:layout_height="40dp"

        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/date_hint_text_view_silent_auction_attributes"
        app:layout_constraintTop_toBottomOf="@id/date_text_silent_auction_attributes" />

    <com.wx.wheelview.widget.WheelView
        android:id="@+id/hours_wheel_view_silent_auction_attributes"
        android:layout_width="150dp"
        android:layout_height="40dp"

        android:layout_marginTop="20dp"
        app:layout_constraint_toEndOf="@id/minutes_wheel_view_silent_auction_attributes"
        app:layout_constraintTop_toBottomOf="@id/date_text_silent_auction_attributes" />

    <com.wx.wheelview.widget.WheelView
        android:id="@+id/days_wheel_view_silent_auction_attributes"
        android:layout_width="150dp"
        android:layout_height="40dp"

        app:layout_constraintStart_toStartOf="@id/minutes_wheel_view_downward_auction_attributes"
        app:layout_constraintTop_toBottomOf="@id/minutes_wheel_view_downward_auction_attributes" />

    <com.wx.wheelview.widget.WheelView
        android:id="@+id/months_wheel_view_silent_auction_attributes"
        android:layout_width="150dp"
        android:layout_height="40dp"

        app:layout_constraintEnd_toEndOf="@id/hours_wheel_view_downward_auction_attributes"
        app:layout_constraintTop_toBottomOf="@id/hours_wheel_view_downward_auction_attributes" />


</androidx.constraintlayout.widget.ConstraintLayout>